DialogWindow subclass: #BMICalcWindow	instanceVariableNames: 'bmiModel weightInput heightInput'	classVariableNames: ''	poolDictionaries: ''	category: 'BMICalc-Core'!!BMICalcWindow methodsFor: 'actions' stamp: 'EduardoPadoan 11/10/2017 15:30'!newContentMorph	weightInput := self		newTextEntryFor: bmiModel		getText: #weight		setText: #weight:		getEnabled: nil		help: 'Weight'.	heightInput := self		newTextEntryFor: bmiModel		getText: #height		setText: #height:		getEnabled: nil		help: 'Height'.	^ self		newColumn:			{(self newRow: {weightInput}).			(self newRow: {heightInput})}! !!BMICalcWindow methodsFor: 'actions' stamp: 'EduardoPadoan 11/10/2017 15:31'!ok	heightInput accept.	weightInput accept.	Transcript cr; show: bmiModel imc.	super ok! !!BMICalcWindow methodsFor: 'actions' stamp: 'EduardoPadoan 11/10/2017 13:53'!defaultLabel	^ 'BMI Calculator'! !!BMICalcWindow methodsFor: 'initialization' stamp: 'EduardoPadoan 11/10/2017 01:08'!initialExtent	^ 550@140! !!BMICalcWindow methodsFor: 'initialization' stamp: 'EduardoPadoan 11/10/2017 15:29'!initialize	bmiModel := BMIModel new.	super initialize! !Object subclass: #BMIModel	instanceVariableNames: 'weight height imc'	classVariableNames: ''	poolDictionaries: ''	category: 'BMICalc-Core'!!BMIModel methodsFor: 'action' stamp: 'EduardoPadoan 11/10/2017 01:23'!imc	^ self weight / (self height squared)! !!BMIModel methodsFor: 'accessing' stamp: 'EduardoPadoan 11/10/2017 01:03'!weight	^ weight! !!BMIModel methodsFor: 'accessing' stamp: 'EduardoPadoan 11/10/2017 01:17'!height	^ height! !!BMIModel methodsFor: 'accessing' stamp: 'EduardoPadoan 11/10/2017 01:21'!weight: anObject	weight := anObject squeezeOutNumber! !!BMIModel methodsFor: 'accessing' stamp: 'EduardoPadoan 11/10/2017 01:21'!height: anObject	height := anObject squeezeOutNumber! !